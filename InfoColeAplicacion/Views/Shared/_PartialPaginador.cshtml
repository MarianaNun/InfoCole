@{
    int Inicial = 1;
    var radio = 3;
    var cantidadMaximaDePaginas = radio * 2 + 1;
    int Final = (Model.TotalPaginas > cantidadMaximaDePaginas) ? cantidadMaximaDePaginas : Model.TotalPaginas;
    if (Model.PaginaActual > radio + 1)
    {
        Inicial = Model.PaginaActual - radio;
        if(Model.TotalPaginas > Model.PaginaActual + radio)
        {
            Final = Model.PaginaActual + radio;
        }
        else
        {
        Final = Model.TotalPaginas;
        }

    }

}


<ul class="pagination">
    <li class="page-item">@Html.ActionLink("Primera", null, new { pagina = 1 }, new { @class = "page-link" })</li>
    @for (int i = Inicial; i <= Final; i++)
    {
    if (i == Model.PaginaActual)
    {

    <li class="page-item active">@Html.ActionLink(i.ToString(), null, new { pagina = i }, new { @class = "page-link" })</li>
    }
    else
    {
    <li class="page-item">
        @Html.ActionLink(i.ToString(), null, new { pagina = i }, new { @class ="page-link" }
        )
    </li>
    }
    }
    <li class="page-item">@Html.ActionLink("Ultima", null, new { pagina = Model.TotalPaginas }, new { @class = "page-link" })</li>
</ul>
