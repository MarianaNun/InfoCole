@model InfoColeAplicacion.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}
<link href="~/Content/Site.css" rel="stylesheet" />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
<form>
    <div class="rounded p-3 mb-5 col-md-6 offset-md-3" style="color:white; background-color:#03658c; box-shadow:1px 1px 25px #000;">
        <h4 style="text-align:center">Cree una cuenta nueva</h4>
        <small class="form-text text-center" style="color: white">Al crear una cuenta podras interactuar con los miembros de la comunidad de InfoCole.</small>

        @Html.ValidationSummary("", new { @style = "color: yellow" })
        <hr />
        <div class="form-group col-md-10 offset-md-1 text-center">
            <label>Email </label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-10 offset-md-1 text-center">
            <label>Nombre de usuario </label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control"})
        </div>
        <div class="form-group col-md-10 offset-md-1 text-center">
            <label for="exampleInputPassword1">Contraseña</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div> 
        <div class="form-group col-md-10 offset-md-1 text-center">
            <label>Confirmar contraseña</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <hr />
        <input id="submitAccount" type="submit" class="btn btn-success" value="Registrarse" style="display: block; margin: 0 auto;"/>
    </div>

</form>

