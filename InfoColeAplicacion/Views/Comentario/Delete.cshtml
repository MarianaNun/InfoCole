@model InfoColeAplicacion.Models.Comentario

@{
    Layout = null;
}

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="modal-header head">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar comentario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p style="font-family:Verdana">¿Esta seguro que desea eliminar este mensaje?</p>
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </dt>

                    <dd class="ml-3">
                        @ViewBag.Tipo
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Contenido)
                    </dt>

                    <dd  class="ml-3">
                        @Html.DisplayFor(model => model.Contenido)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </dt>

                    <dd  class="ml-3">
                        @Html.DisplayFor(model => model.Fecha)
                    </dd>

                </dl>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-success" data-dismiss="modal" aria-label="Close" style="color: white">Cancelar</button>
                        <input type="submit" id="deleteButton" value="Eliminar" class="btn btn-sm btn-danger" />
                    </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
